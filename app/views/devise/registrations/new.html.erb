<div class = "form-all">
<h2>Sign up</h2>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input   :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "First name" }%>
    <%= f.input :last_name,
                required: true,
                # autofocus: true, # you need only once: it says where you are going to put cursor when you load the page
                input_html: { autocomplete: "Last name" }%>  <%# fill up with broswer suggestions%>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :user_type,
                as: :select,
                collection: ['owner', 'renter'], # drop down list with options
                #check how to set this and check how to change the text of this form
                required: true,
                input_html: { autocomplete: "user type"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
