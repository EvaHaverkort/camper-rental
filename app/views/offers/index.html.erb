
<div class="container centered-margin">
  <div class="cards-grid-index">
    <% @offers.each do |offer| %>
      <div class="card flex-column" style="width: 18rem;">
        <%= cl_image_tag offer.photo.key, class: "card-index-img" %>
        <div class="card-body">
          <h5 class="card-title"><%= offer.brand %></h5>
          <p class="card-text">â‚¬<%= offer.price %></p>
          <%=link_to "More Details", offer_path(offer), class: "btn btn-secondary" %>
          <%=link_to "Book", offer_bookings_path(offer), class: "btn btn-secondary" %>
        </div>
      </div>
    <%end %>
  </div>
</div>

<%=link_to "Add new offer", new_offer_path, class: "btn btn-secondary"%>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
