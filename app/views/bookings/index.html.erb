<h1>Bookings</h1>

<% @bookings.each do |booking| %>
  <img class="card-img-top" src="..." alt="Card image cap">
  <%# <% user = booking.user%>
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <p>Person that booked: </p>
    <%= booking.user.email%>

    <p>Offer: </p>
    <%# <% booking.offer_id%>
    <%# offer = Offer.find(booking.offer_id)%>
    <p><%= booking.offer.brand %></p>

    <br>
    <p> Start date: <%= booking.start_date%></p>
    <p> End date: <%= booking.end_date%></p>
    <p> Price: <%= booking.final_price%></p>
    <br>
    <% if booking.accepted == true %>
      <p>Booking accepted </p>
    <% else %>
      <p>Accept booking? yes/no </p>
    <%end%>
  </div>
  </div>
<%end%>
